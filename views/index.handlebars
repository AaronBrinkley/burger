<h1>Eat-Da-Burger</h1>



<div class="container-fluid">
  <div class="panel panel-default">
    
      <div class="panel-body">
          
               
              <ol>
                
                  {{#each burgers}}
                    {{#unless devoured}}
                      <li>
                      {{burger_name}}
                      <form action='/api/burgers/{{this.id}}?_method=PUT' method="POST">
                     
                     <button type='submit' class="btn btn-default">Devour It</button>
                     </form>
                      </li>
                   {{/unless}}
                 {{/each}}

             </ol>
                
              
      </div>
  </div>

  <div class="panel panel-default">
    
      <div class="panel-body">
          

                 
                <ol>
                  {{#each burgers}}
                   {{#if devoured}}
                   <li>
                     {{burger_name}}
                    </li>
                   {{/if}}
                  {{/each}}
                </ol>

  
          

      </div>
  </div>

  
</div>






<h2>Add a burger</h2>
<form class="create-update-form" action="api/burgers" method="POST">

  <input type="text" id="burgerInput" name="name">

  <button type="submit">Submit</button>
</form>


